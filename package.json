{
  "name": "ccui-backend",
  "version": "0.1.1",
  "description": "Backend for Claude Code Web UI",
  "main": "dist/cli/index.js",
  "bin": {
    "ccui": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli/index.ts serve",
    "dev:web": "vite",
    "build": "npm run build:web && tsc && tsc-alias && npm run build:mcp",
    "build:web": "vite build",
    "build:mcp": "chmod +x dist/mcp-server/index.js",
    "cli": "node dist/cli/index.js",
    "test": "jest",
    "test:debug": "LOG_LEVEL=debug jest",
    "unit-tests": "jest tests/unit",
    "integration-tests": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@streamparser/json": "^0.0.21",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "ignore": "^7.0.5",
    "lucide-react": "^0.525.0",
    "node-fetch": "^2.7.0",
    "pino": "^8.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "uuid": "^9.0.1",
    "vite-express": "^0.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.19",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.6"
  }
}
