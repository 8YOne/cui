{
  "name": "cui-server",
  "version": "0.2.3",
  "description": "Web UI Agent Platform based on Claude Code",
  "main": "dist/cui-server.js",
  "bin": {
    "cui-server": "dist/server.js"
  },
  "files": [
    "dist/**/*",
    "config/**/*",
    "scripts/postinstall.js"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "web-ui",
    "agent",
    "mcp"
  ],
  "author": "Wenbo Pan",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmpixel/cui.git"
  },
  "bugs": {
    "url": "https://github.com/bmpixel/cui/issues"
  },
  "homepage": "https://github.com/bmpixel/cui#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev:web": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production npm run build:web && tsc && tsc-alias && npm run build:mcp",
    "build:web": "cross-env NODE_ENV=production vite build",
    "build:mcp": "chmod +x dist/mcp-server/index.js",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:debug": "cross-env NODE_ENV=test LOG_LEVEL=debug jest",
    "unit-tests": "cross-env NODE_ENV=test jest tests/unit",
    "integration-tests": "cross-env NODE_ENV=test jest tests/integration",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:leaks": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.19",
    "@anthropic-ai/sdk": "^0.54.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/prismjs": "^1.26.5",
    "cors": "^2.8.5",
    "diff": "^8.0.2",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "ignore": "^7.0.5",
    "lucide-react": "^0.525.0",
    "node-fetch": "^2.7.0",
    "pino": "^8.17.1",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.22.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "vite-express": "^0.16.0"
  }
}
