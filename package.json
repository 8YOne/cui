{
  "name": "cui-server",
  "version": "0.2",
  "description": "Web UI Server for Claude CLI - Interactive browser interface for Claude Code",
  "main": "dist/cui-server.js",
  "bin": {
    "cui-server": "dist/server/index.js"
  },
  "files": [
    "dist/**/*",
    "config/**/*"
  ],
  "keywords": [
    "claude",
    "claude-cli",
    "claude-code",
    "ai",
    "web-ui",
    "anthropic"
  ],
  "author": "Wenbo Pan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ccui.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ccui/issues"
  },
  "homepage": "https://github.com/yourusername/ccui#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:web": "vite",
    "build": "npm run build:web && tsc && tsc-alias && npm run build:mcp",
    "build:web": "vite build",
    "build:mcp": "chmod +x dist/mcp-server/index.js",
    "test": "jest",
    "test:debug": "LOG_LEVEL=debug jest",
    "unit-tests": "jest tests/unit",
    "integration-tests": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:leaks": "jest --detectOpenHandles --forceExit",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/prismjs": "^1.26.5",
    "cors": "^2.8.5",
    "diff": "^8.0.2",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "ignore": "^7.0.5",
    "lucide-react": "^0.525.0",
    "node-fetch": "^2.7.0",
    "pino": "^8.17.1",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.22.0",
    "uuid": "^9.0.1",
    "vite-express": "^0.16.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.19",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "npm run typecheck"
    ]
  }
}
